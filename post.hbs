{{!< default}}

{{#post}}

{{#if feature_image}}
<img class="post-card-image kg-width-full"
    srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w"
    sizes="(max-width: 1000px) 400px, 700px"
    loading="lazy"
    src="{{img_url feature_image size="m"}}"
    alt="[{{title}}]"
/>
{{/if}}

<div class="post-title-bar">
    <h1>{{title}}</h1>
    {{#if primary_tag}}
    {{#primary_tag}}
    <p class="secondary">
        <a href="{{url}}" class="tag primary-tag quiet-link secondary">{{name}}</a>
    </p>
    {{/primary_tag}}
    {{/if}}
</div>

{{content}}

<p class="secondary">
    Written by
    <span class="authors">{{#foreach authors}}<a href="{{url}}" class="author quiet-link">{{name}}</a>{{/foreach}}</span>.
    Published on <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD/MM/YYYY"}}</time>.
</p>

{{/post}}